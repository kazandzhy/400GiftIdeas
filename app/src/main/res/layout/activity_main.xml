<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b0d7aa"
        tools:context=".MainActivity">

        <Space
            android:id="@+id/space1"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toTopOf="@+id/giftsByAgeImageButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"></Space>

        <ImageButton
            android:id="@+id/giftsByAgeImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            app:layout_constraintBottom_toTopOf="@+id/giftsByAgeTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/space1"
            app:srcCompat="@drawable/different_age_groups" />

        <TextView
            android:id="@+id/giftsByAgeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By Age"
            android:textColor="#54604d"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/giftsByAgeImageButton" />

        <Space
            android:id="@+id/space"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toTopOf="@+id/giftsByEventImageButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/giftsByAgeTextView"></Space>


        <ImageButton
            android:id="@+id/giftsByEventImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            app:layout_constraintBottom_toTopOf="@+id/giftsByEventTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/space"
            app:srcCompat="@drawable/special_events" />

        <TextView
            android:id="@+id/giftsByEventTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By Event"
            android:textColor="#54604d"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/space2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/giftsByEventImageButton" />

        <Space
            android:id="@+id/space2"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toTopOf="@+id/extrasImageButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/giftsByEventTextView"></Space>

        <ImageButton
            android:id="@+id/extrasImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            app:layout_constraintBottom_toTopOf="@+id/extrasTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/space2"
            app:srcCompat="@drawable/extras" />


        <TextView
            android:id="@+id/extrasTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extras"
            android:textColor="#54604d"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/space3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/extrasImageButton" />

        <Space
            android:id="@+id/space3"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginBottom="50dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/extrasTextView"></Space>

    </android.support.constraint.ConstraintLayout>

</ScrollView>